# Root editor config file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Base: use tabs for indent; files can override tab width
[{*.js,*.vue,*.css,*.scss,*.html}]
indent_style = tab
indent_size = tab
tab_width = 2
max_line_length = 99

# Python: one tab per indent level, tab width 4
[*.py]
indent_style = tab
indent_size = tab
tab_width = 2
max_line_length = 99

# Doctype JSON schemas: keep Frappe's tiny indent (space, width=1)
[{*.json}]
insert_final_newline = false
indent_style = space
indent_size = 1
